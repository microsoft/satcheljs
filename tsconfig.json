{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "outDir": "build",
    "sourceMap": false,
    "declaration": true,
    "removeComments": false,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": [
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "lib"
  ],
  "include": [
    "src/**/*",
    "test/**/*",
    "typings/**/*.d.ts"
  ]
}